include README.md
include LICENSE
include requirements.txt
include MANIFEST.in

# Configuration files
recursive-include floodml/config *.yaml *.yml
recursive-include floodml/data *.json

# Documentation
recursive-include docs *.rst *.md *.png *.jpg
recursive-exclude docs/_build *

# Examples
recursive-include examples *.py *.ipynb *.md

# Tests
recursive-include tests *.py

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *~
recursive-exclude * .DS_Store